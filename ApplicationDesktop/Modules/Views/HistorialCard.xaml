<UserControl x:Class="ApplicationDesktop.Modules.Views.HistorialCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ApplicationDesktop.Modules.Views"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="600">
    <Grid>
        <Border CornerRadius="10"
                Background="{StaticResource ForegroundText3}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5"
                                  ShadowDepth="1"/>
            </Border.Effect>
            <TextBlock Text="{Binding TbHistorial}"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       FontWeight="Bold"/>
        </Border> 
    </Grid>
</UserControl>
